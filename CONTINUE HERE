 while(!bombs.includes(upRight)) {
        document.getElementById(upRight).disabled = true
        if(bombsNear[upRight] > 0) {
            document.getElementsById(upRight).innerHTML = bombsNear[upRight]
            break;
        }
        if(right.includes(upRight)) {
            break
        }
        ++upRight
    }
    


    while(!bombs.includes(upway)){
        document.getElementById(upway).disabled = true
        if(bombsNear[upway] > 0) {
            document.getElementById(upway).innerHTML = bombsNear[upway]
            document.getElementById(upway).disabled = true
            ++buttonId
            upway = buttonId
        }
        if(up.includes(upway)) {
            ++buttonId
            upway = buttonId
        }
        if(upway == 20) {
            document.getElementById(upway).disabled = true
            if(bombsNear[upway] > 0) {
                document.getElementById(upway).innerText = bombsNear[upway]
            }
            break
        }
        if(right.includes(upway)){
            for(var i = upway; i >= 20; i -= 20){
                if(!bombs.includes(i)){
                    document.getElementById(i).disabled = true
                    if(bombsNear[i] != 0) {
                        document.getElementById(i).innerText = bombsNear[i]
                        break
                    }
                } else {
                    break
                }
            }
            break
        }
        var flag = checkNext2(upway)
        if(flag == true) {
            break
        }
        upway -= 20
        
    }
    buttonId = downLeft - 1
    upway = buttonId
    while(!bombs.includes(upway)){
        document.getElementById(upway).disabled = true
        if(bombsNear[upway] > 0) {
            document.getElementById(upway).innerHTML = bombsNear[upway]
            document.getElementById(upway).disabled = true
            --buttonId
            upway = buttonId
        }
        if(up.includes(upway)) {
            --buttonId
            upway = buttonId
        }
        if(left.includes(upway)){
            for(var i = upway; i >= 1; i -= 20){
                if(!bombs.includes(i)){
                    document.getElementById(i).disabled = true
                    if(bombsNear[i] != 0) {
                        document.getElementById(i).innerText = bombsNear[i]
                        break
                    }
                } else {
                    break
                }
            }
            break
        }
        var flag = checkNext2(upway)
        if(flag == true) {
            break
        }
        upway -= 20
    }
    buttonId = downway

    while(!bombs.includes(downway)){
        document.getElementById(downway).disabled = true
        if(bombsNear[downway] > 0) {
            document.getElementById(downway).innerHTML = bombsNear[downway]
            document.getElementById(downway).disabled = true
            ++buttonId
            downway = buttonId
        }
        if(down.includes(downway)) {
            ++buttonId
            downway = buttonId
        }
        if(right.includes(downway)){
            for(var i = downway; i <= 400; i += 20){
                if(!bombs.includes(i)){
                    document.getElementById(i).disabled = true
                    if(bombsNear[i] != 0) {
                        document.getElementById(i).innerText = bombsNear[i]
                        break
                    }
                } else {
                    break
                }
            }
            break
        }
        var flag = checkNext2(downway)
        if(flag == true) {
            break
        }
        downway += 20
    }
    buttonId = rightway
    downway = buttonId - 1
    while(!bombs.includes(downway)){
        document.getElementById(downway).disabled = true
        if(bombsNear[downway] > 0) {
            document.getElementById(downway).innerHTML = bombsNear[downway]
            document.getElementById(downway).disabled = true
            --buttonId
            downway = buttonId
        }
        if(down.includes(downway)) {
            --buttonId
            downway = buttonId
        }
        if(left.includes(downway)){
            for(var i = downway; i <= 381; i += 20){
                if(!bombs.includes(i)){
                    document.getElementById(i).disabled = true
                    if(bombsNear[i] != 0) {
                        document.getElementById(i).innerText = bombsNear[i]
                        break
                    }
                } else {
                    break
                }
            }
            break
        }
        var flag = checkNext2(downway)
        if(flag == true) {
            break
        }
        downway += 20
        
    }
}
